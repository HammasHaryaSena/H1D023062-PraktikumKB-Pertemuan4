% Fakta dan aturan deteksi gangguan mental pada anak

gangguan(adhd) :-
    gejala(sulit_fokus),
    gejala(hiperaktif),
    gejala(mudah_terdistraksi).

gangguan(autisme) :-
    gejala(perilaku_berulang),
    gejala(kesulitan_interaksi).

gangguan(depresi) :-
    gejala(murung),
    gejala(tidak_bersemangat),
    gejala(menarik_diri).

gangguan(kecemasan) :-
    gejala(sering_cemas),
    gejala(takut_berlebihan),
    gejala(sulit_tidur).

gangguan(ocd) :-
    gejala(perilaku_kompulsif),
    gejala(pikiran_obsesif).
